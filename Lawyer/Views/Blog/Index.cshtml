@model List<BlogViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}


<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
    
    <!-- Bootstrap CSS -->
   @* <link rel="stylesheet" href="css/bootstrap.min.css">*@
    <!-- animate CSS -->
    <link rel="stylesheet" href="~/Blog/css/animate.css">
    <!-- owl carousel CSS -->
    <link rel="stylesheet" href="~/Blog/css/owl.carousel.min.css">
    <!-- themify CSS -->
    <link rel="stylesheet" href="~/Blog/css/themify-icons.css">
    <!-- flaticon CSS -->
    <link rel="stylesheet" href="~/Blog/css/flaticon.css">
    <!-- font awesome CSS -->
    <link rel="stylesheet" href="~/Blog/css/magnific-popup.css">
    <!-- swiper CSS -->
    <link rel="stylesheet" href="~/Blog/css/slick.css">
    <link rel="stylesheet" href="~/Blog/css/gijgo.min.css">
    <link rel="stylesheet" href="~/Blog/css/nice-select.css">
    <link rel="stylesheet" href="~/Blog/css/all.css">
    <!-- style CSS -->
    <link rel="stylesheet" href="~/Blog/css/BlogStyle.css">
    <link rel="stylesheet" href="~/judge-master/css/ionicons.min.css">
</head>

<body>
    <!--::header part start::-->

    <!-- Header part end-->
    <!-- breadcrumb start-->
    <section class="breadcrumb breadcrumb_bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb_iner text-center">
                        <div class="breadcrumb_iner_item">
                            <h2 style="font-size:48px">Blog</h2>
                            <p class="breadcrumbs"><span class="mr-2"><a href="/Default/Index" style="font-size:17px">Ana Sayfa <i class="ion-ios-arrow-forward"></i></a></span> <span style="font-size:17px">Blog<i class="ion-ios-arrow-forward"></i></span></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb start-->
    <!--================Blog Area =================-->
    <section class="blog_area section_padding">
        <div class="container">        
            <div class="row">   
                    <div class="col-lg-8 mb-5 mb-lg-0">
                    <div class="blog_left_sidebar">

                        @foreach (var item in Model)
                        {
                            <div class="col-md-6">
                            <article class="blog_item">
                                <div class="blog_item_img">
                                    @if (item.ImageUrl == null)
                                    {
                                        <img class="card-img rounded-0" src="~/Blog/img/blog/single_blog_1.png" alt="">
                                    }
                                    @if (item.ImageUrl != null)
                                    {
                                        <img class="card-img rounded-0" src="@item.ImageUrl" alt="">
                                    }

                                    <a href="#" class="blog_item_date">
                                        <h3>@item.CreatedDateDays</h3>
                                        <p>@item.CreatedDateMonths</p>
                                    </a>
                                </div>

                                <div class="blog_details">
                                    <a class="d-inline-block" asp-action="SingleBlog" asp-route-id="@item.Id">
                                        <h2>@item.Title</h2>
                                    </a>
                                    <p>
                                      @Html.Raw( @item.Description)...
                                    </p>
                                    <ul class="blog-info-link">
                                        <li><a><i class=""></i> Yazar</a></li>
                                        <li><a asp-action="AboutMe" asp-controller="About" asp-route-id="@item.AuthorId"><i class="far fa-user"></i> @item.Author</a></li>
                                        
                                    </ul>
                                </div>
                            </article>
                            </div>
                        }
                        

                       

                        
                    </div>


                    <nav class="blog-pagination justify-content-center d-flex">
                        <ul class="pagination">
                            <li class="page-item">
                                <a href="#" class="page-link" aria-label="Previous">
                                    <i class="ti-angle-left"></i>
                                </a>
                            </li>
                            <li class="page-item">
                                <a href="#" class="page-link">1</a>
                            </li>
                            <li class="page-item active">
                                <a href="#" class="page-link">2</a>
                            </li>
                            <li class="page-item">
                                <a href="#" class="page-link" aria-label="Next">
                                    <i class="ti-angle-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
                <div class="col-lg-4">
                    <div class="blog_right_sidebar">
                        <!--  Ara -->
                        <aside class="single_sidebar_widget search_widget">
                            <form action="#">
                                <div class="form-group">
                                    <div class="input-group mb-3">
                                        <input type="text" class="form-control" placeholder='Search Keyword'
                                               onfocus="this.placeholder = ''"
                                               onblur="this.placeholder = 'Search Keyword'">
                                        <div class="input-group-append">
                                            <button class="btn" type="button"><i class="ti-search"></i></button>
                                        </div>
                                    </div>
                                </div>
                                <button class="button rounded-0 primary-bg text-white w-100 btn_1"
                                        type="submit">
                                    Search
                                </button>
                            </form>
                        </aside>
                        <!--  Blog Kategorileri -->
                         @await Component.InvokeAsync("_BlogCategoryPartial")
                        <!--  Son Bloglar -->
                        @await Component.InvokeAsync("_RecentBlogPartial")
                       

                       


                        <aside class="single_sidebar_widget newsletter_widget">
                            <h4 class="widget_title">Newsletter</h4>

                            <form action="#">
                                <div class="form-group">
                                    <input type="email" class="form-control" onfocus="this.placeholder = ''"
                                           onblur="this.placeholder = 'Enter email'" placeholder='Enter email' required>
                                </div>
                                <button class="button rounded-0 primary-bg text-white w-100 btn_1"
                                        type="submit">
                                    Subscribe
                                </button>
                            </form>
                        </aside>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--================Blog Area =================-->

    

    <!-- jquery plugins here-->
    <!-- jquery -->
    <script src="~/Blog/js/jquery-1.12.1.min.js"></script>
    <!-- popper js -->
    <script src="~/Blog/js/popper.min.js"></script>
    <!-- bootstrap js -->
    <script src="~/Blog/js/bootstrap.min.js"></script>
    <!-- easing js -->
    <script src="~/Blog/js/jquery.magnific-popup.js"></script>
    <!-- swiper js -->
    <script src="~/Blog/js/swiper.min.js"></script>
    <!-- swiper js -->
    <script src="~/Blog/js/masonry.pkgd.js"></script>
    <!-- particles js -->
    <script src="~/Blog/js/owl.carousel.min.js"></script>
    <!-- swiper js -->
    <script src="~/Blog/js/slick.min.js"></script>
    <script src="~/Blog/js/gijgo.min.js"></script>
    <script src="~/Blog/js/jquery.nice-select.min.js"></script>
    <!-- custom js -->
    <script src="~/Blog/js/custom.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var blogDetailsElements = document.querySelectorAll('.blog_details');

            var maxHeight = 0;
            blogDetailsElements.forEach(function (element) {
                var elementHeight = element.offsetHeight;
                maxHeight = Math.max(maxHeight, elementHeight);
            });

            blogDetailsElements.forEach(function (element) {
                element.style.height = maxHeight + 'px';
            });
        });
    </script>


</body>

