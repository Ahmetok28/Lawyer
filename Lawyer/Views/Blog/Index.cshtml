@model List<BlogViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}


<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">


    <!-- Bootstrap CSS -->
    @* <link rel="stylesheet" href="css/bootstrap.min.css">*@
    <!-- animate CSS -->
    <link rel="stylesheet" href="~/Blog/css/animate.css">
    <!-- owl carousel CSS -->
    <link rel="stylesheet" href="~/Blog/css/owl.carousel.min.css">
@*    <!-- themify CSS -->
    <link rel="stylesheet" href="~/Blog/css/themify-icons.css">
    <!-- flaticon CSS -->
    <link rel="stylesheet" href="~/Blog/css/flaticon.css">*@
    <!-- font awesome CSS -->
    <link rel="stylesheet" href="~/Blog/css/magnific-popup.css">
    <!-- swiper CSS -->
    <link rel="stylesheet" href="~/Blog/css/slick.css">
    <link rel="stylesheet" href="~/Blog/css/gijgo.min.css">
    <link rel="stylesheet" href="~/Blog/css/nice-select.css">
  @*  <link rel="stylesheet" href="~/Blog/css/all.css">*@
    <!-- style CSS -->
    <link rel="stylesheet" href="~/Blog/css/BlogStyle.css">
    <link rel="stylesheet" href="~/judge-master/css/ionicons.min.css">
</head>

<body>
    <!--::header part start::-->
    <!-- Header part end-->
    <!-- breadcrumb start-->
    <section class="breadcrumb breadcrumb_bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb_iner text-center">
                        <div class="breadcrumb_iner_item">
                            <h2 style="font-size:48px">Blog</h2>
                            <p class="breadcrumbs"><span class="mr-2"><a href="/Default/Index" style="font-size:17px;  color:black;">Ana Sayfa <i class="ion-ios-arrow-forward"></i></a></span> <span style="font-size:17px">Bloglar<i class="ion-ios-arrow-forward"></i></span></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb start-->
    <!--================Blog Area =================-->

    <section class="blog_area section_padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="blog_left_sidebar">

                        @foreach (var item in Model)
                        {
                            <div class="col-md-6">
                                <article class="blog_item">
                                    <div class="blog_item_img">
                                        @if (item.ImageUrl == null)
                                        {
                                            <img class="card-img rounded-0" src="~/Blog/img/blog/single_blog_1.png" alt="">
                                        }
                                        @if (item.ImageUrl != null)
                                        {
                                            <img  class="card-img rounded-0" src="~/Images/Blogs/@item.ImageUrl" alt="blog resmi">
                                        }

                                        <a  href="#" class="blog_item_date">
                                            <h3>@item.CreatedDateDays</h3>
                                            <p>@item.CreatedDateMonths</p>
                                        </a>
                                    </div>

                                    <div class="blog_details">
                                        <a class="d-inline-block" asp-action="SingleBlog" asp-route-id="@item.Id">
                                            <h2>@item.Title</h2>
                                        </a>
                                        <p>
                                            @Html.Raw( @item.Description)...
                                        </p>
                                        <ul class="blog-info-link">
                                            <li><a><i class=""></i> Yazar</a></li>
                                            <li><a asp-action="AboutMe" asp-controller="About" asp-route-id="@item.AuthorId"><i class="far fa-user"></i> @item.Author</a></li>

                                        </ul>
                                    </div>
                                </article>
                            </div>
                        }





                    </div>
                  
                    <div class="col-md-12">
                        
                        <nav class="blog-pagination justify-content-center d-flex" ">
                           
                            <ul class="pagination">
                                <li class="page-item @(ViewBag.PageNumber == 1 ? "disabled" : "")">
                                    <a  class="page-link" href="@Url.Action("Index", new { categoryid = ViewBag.CategoryId, pageNumber = ViewBag.PageNumber - 1 })">
                                        <i class="ion-ios-arrow-back"></i>
                                    </a>
                                </li>
                                @for (int i = 1; i <= Math.Ceiling((double)ViewBag.TotalItems / ViewBag.PageSize); i++)
                                {
                                <li class="page-item @(i == ViewBag.PageNumber ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Index", new { categoryid = ViewBag.CategoryId, pageNumber = i })">@i</a>
                                </li>
                                }
                                <li class="page-item @(ViewBag.PageNumber == ViewBag.TotalPages ? "disabled" : "")">
                                    <a  class="page-link" href="@Url.Action("Index", new { categoryid = ViewBag.CategoryId, pageNumber = ViewBag.PageNumber + 1})">
                                        <i class="ion-ios-arrow-forward"></i>
                                    </a>

                                </li>
                            </ul>
                        </nav>

                    </div>

                </div>
                <div class="col-lg-4">
                    <div class="blog_right_sidebar">
                        <!--  Ara -->
                        @await Component.InvokeAsync("_SearchBlogPartial")
                        <!--  Blog Kategorileri -->
                        @await Component.InvokeAsync("_BlogCategoryPartial")
                        <!--  Son Bloglar -->
                        @await Component.InvokeAsync("_RecentBlogPartial")





                        <aside class="single_sidebar_widget newsletter_widget">
                            <h4 class="widget_title">Bültene Abone Olun</h4>
                            <p>Yayınlanan Blogları Kaçırmayın</p>
                            <hr />
                            <form action="#">
                                <div class="form-group">
                                    <input type="email" class="form-control" onfocus="this.placeholder = ''"
                                           onblur="this.placeholder = 'E Posta adresinizi yazın'" placeholder='E Posta adresinizi yazın' required>
                                </div>
                                <button class="button rounded-0 primary-bg text-white w-100 btn_1"
                                        type="submit">
                                    Abone Ol
                                </button>
                            </form>
                        </aside>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--================Blog Area =================-->
    <!-- jquery plugins here-->
    <!-- jquery -->
   
    <script src="Blog/js/jquery-1.12.1.min.js"></script>
    <!-- popper js -->
    <script src="~/Blog/js/popper.min.js"></script>
    <!-- bootstrap js -->
    <script src="~/Blog/js/bootstrap.min.js"></script>
    <!-- easing js -->
    <script src="~/Blog/js/jquery.magnific-popup.js"></script>
    <!-- swiper js -->
    <script src="~/Blog/js/swiper.min.js"></script>
    <!-- swiper js -->
    <script src="~/Blog/js/masonry.pkgd.js"></script>
    <!-- particles js -->
    <script src="~/Blog/js/owl.carousel.min.js"></script>
    <!-- swiper js -->
    <script src="~/Blog/js/slick.min.js"></script>
    <script src="~/Blog/js/gijgo.min.js"></script>
    <script src="~/Blog/js/jquery.nice-select.min.js"></script>
    <!-- custom js -->
    <script src="~/Blog/js/custom.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var blogDetailsElements = document.querySelectorAll('.blog_details');

            var maxHeight = 0;
            blogDetailsElements.forEach(function (element) {
                var elementHeight = element.offsetHeight;
                maxHeight = Math.max(maxHeight, elementHeight);
            });

            blogDetailsElements.forEach(function (element) {
                element.style.height = maxHeight + 'px';
            });
        });
    </script>


</body>

