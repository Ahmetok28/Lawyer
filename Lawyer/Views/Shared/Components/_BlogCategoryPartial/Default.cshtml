@using Business.Constants;

@model List<BlogCategory>
<aside class="single_sidebar_widget post_category_widget">
    <h4 class="widget_title">Kategoriler</h4>
    <ul class="list cat-list">
        <li>
                <a href="/@UrlConstants.Blog" class="d-flex">
                    <p>Tüm Kategoriler</p>
                
                </a>
            </li>
       @foreach (var item in Model)
        {
            <li>
                <a asp-action="Index" asp-controller="Blog" asp-route-categoryid="@item.Id" class="d-flex">
                    <p>@item.Name</p>
                </a>
            </li>
        }
        
       
    </ul>
</aside>
