@model NavbarViewModel

@if (ViewBag.Admin || ViewBag.Editor)
{
    <li class="nav-item pe-3">
    <a class="nav-link nav-profile d-flex align-items-center pe-0" href="/Admin/IncomingMessages/Index" >
        <i class="ri-message-fill" style="font-size:22px">

        </i>
        <span class="">Gelen Mesajlar</span>
    </a>
</li>
}
<li class="nav-item dropdown pe-3">
   

    <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
        <img src="~/Images/ProfilePhotos/@Model.Photo" alt="Profile" class="rounded-circle">
        <span class="d-none d-md-block dropdown-toggle ps-2">@Model.Name</span>
    </a><!-- End Profile Iamge Icon -->

    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
        <li class="dropdown-header">
            <h6>@Model.Name</h6>
            @if (Model.Profession!=null)
            {
                <span>@Model.Profession</span>
            }
            
        </li>
        <li>
            <hr class="dropdown-divider">
        </li>

        <li>
            <a class="dropdown-item d-flex align-items-center" asp-action="Index" asp-controller="Users" asp-area="Admin">
                <i class="bi bi-person"></i>
                <span>Profilim</span>
            </a>
        </li>
       
        <li>
            <hr class="dropdown-divider">
        </li>
        @if (ViewBag.Admin)
        {
             <li>
                <a class="dropdown-item d-flex align-items-center" asp-action="MetaValuesEdit" asp-controller="WebSiteSettings" asp-area="Admin">
                <i class="bi bi-gear"></i>
                <span>Uygulama Ayarları</span>
            </a>
        </li>
        <li>
            <hr class="dropdown-divider">
        </li>

        <li>
                <a class="dropdown-item d-flex align-items-center" asp-action="Users" asp-controller="Users" asp-area="Admin">
                    <i class="bi bi-people"></i>
                <span>Tüm Kullanıcılar</span>
            </a>
        </li>
        }
       
        <li>
            <hr class="dropdown-divider">
        </li>

        <li>
            <a class="dropdown-item d-flex align-items-center" asp-action="Logout" asp-controller="Auth" asp-area="Admin">
                <i class="bi bi-box-arrow-right"></i>
                <span>Çıkış Yap</span>
            </a>
        </li>

    </ul><!-- End Profile Dropdown Items -->
</li>