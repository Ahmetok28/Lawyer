@model Entities.Concrete.HomeText

@{
    ViewData["Title"] = "EditHeader";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="pagetitle">
    <h1>Kullanıcı Anasayfası Giriş Güncelleme</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Admin/">Admin Anasayfa</a></li>
            <li class="breadcrumb-item"><a href="">Anasayfayı Düzenleme</a></li>
            
        </ol>
    </nav>
</div>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="EditHeader">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input readonly="readonly" asp-for="Id" class="form-control" value="@Model.Id"/>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label >Başlık</label>
                <textarea asp-for="Title" class="form-control"rows="5" cols="80" >@Model.Title</textarea>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>İçerik</label>
                <textarea asp-for="Body" class="form-control" rows="5" cols="80">@Model.Body</textarea>
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Arkaplan Resmi</label>
                <textarea asp-for="BackroundImage" class="form-control" rows=" 5" cols="80" > @Model.BackroundImage</textarea>
                <span asp-validation-for="BackroundImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

