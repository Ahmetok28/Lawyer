@model Entities.Concrete.AboutText

@{
    ViewData["Title"] = "EditAbout";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="pagetitle">
    <h1>Kullanıcı Anasayfa Hakkımda Güncelleme</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Admin/">Admin Anasayfa</a></li>
            <li class="breadcrumb-item"><a href="">Anasayfa Hakkımda Düzenleme</a></li>
            
        </ol>
    </nav>
</div>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="EditAbout">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input readonly="readonly" asp-for="Id" class="form-control" value="@Model.Id" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label > Başlık</label>
                <textarea asp-for="Title" class="form-control" rows="5" cols="80">
                    @Model.Title 
                </textarea>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label > İçerik</label>
                <textarea asp-for="Description" class="form-control" rows="5" cols="80">
                    @Model.Description 
                </textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label >Yazar</label>
                <textarea asp-for="Author" class="form-control" rows="5" cols="60">
                    @Model.Author 
                </textarea>
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label >Resim</label>
                <input asp-for="Image" class="form-control" value="@Model.Image"/>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

