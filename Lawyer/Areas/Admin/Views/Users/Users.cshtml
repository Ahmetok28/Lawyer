@model List< UserForTeamDTO>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-lg-12">


        <!-- Table with stripped rows -->
        <table class="table datatable">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Kullanıcı</th>
                    <th>Mail</th>
                    <th>Telefon</th>
                    <th>Alan</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item1 in Model)
                {
                    <tr>
                        <td>
                            @item1.UserId
                        </td>
                        <td>
                            @item1.FullName
                        </td>
                        <td>
                            @item1.Mail
                        </td>
                        <td>
                            @item1.PhoneNumber
                        </td>
                        <td>
                            @item1.Profession
                        </td>
                        <td>
                           
                            <a asp-controller="Users" asp-route-Id="@item1.UserId" asp-action="UpdateUserRoles" asp-area="Admin" class="btn btn-warning">Güncelle</a>
                            <a asp-controller="Users" asp-route-id="@item1.UserId" asp-action="Delete" asp-area="Admin" method="get" class="btn btn-danger">Sil</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <!-- End Table with stripped rows -->

    </div>
</div>
