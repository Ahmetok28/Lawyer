@model Entities.Concrete.PracticeArea

@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Güncelle</h1>

<h4><a asp-action="Index">Çalışma Alanları</a> @Model.Name</h4>
