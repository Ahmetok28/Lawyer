                    <option value="/Images/PracticaAreaLogos/auction.png">auction</option>
                    <option value="/Images/PracticaAreaLogos/discussion.png">discussion</option>
                    <option value="/Images/PracticaAreaLogos/employee.png">employee</option>
                    <option value="/Images/PracticaAreaLogos/fire.png">fire</option>
                    <option value="/Images/PracticaAreaLogos/handcuffs.png">handcuffs</option>
