                    <option value="/Images/PracticaAreaLogos/medicine.png">medicine</option>
                    <option value="/Images/PracticaAreaLogos/money.png">money</option>
                    <option value="/Images/PracticaAreaLogos/shield.png">shield</option>
                    <option value="@Model.LogoImage" selected>Geçerli Logo</option>
                </select>
               
                <span asp-validation-for="LogoImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Ana Sayfadaki Arkaplanı</label>
                <input asp-for="BackgroundImage" class="form-control" />
                <span asp-validation-for="BackgroundImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
