@model Entities.Concrete.AboutPage

@{
    ViewData["Title"] = "UpdateAboutPage";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Güncelle</h1>

<h4>Hakkımızda Sayfası Giriş</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="UpdateAboutPage">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label >Id</label>
                <input readonly="readonly" asp-for="Id" class="form-control"value="@Model.Id" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label >Başlık</label>
                <input asp-for="WhoWeAreTitle" class="form-control" value="@Model.WhoWeAreTitle"/>
                <span asp-validation-for="WhoWeAreTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label> Biz Kimiz Metini</label>
                <textarea asp-for="WhoWeAreContent" class="form-control" rows="5" cols="60">
                    @Model.WhoWeAreContent
                </textarea>
                <span asp-validation-for="WhoWeAreContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label"> Ekip Yazısı</label>
                <textarea asp-for="TeamText" class="form-control"  rows="5" cols="60">
                    @Model.TeamText
                </textarea>
                <span asp-validation-for="TeamText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Geri Dön</a>
</div>

