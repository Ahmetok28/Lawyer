@model Entities.Concrete.WhatsSaidAboutUs

@{
    ViewData["Title"] = "AddWhatSaids";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Hakkımızda Söylenenler Kısımına Eklme Yap</h1>


<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="AddWhatSaids">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
             <div class="form-group">
                <label class="control-label">Yorum Yapan Kişinin Adı</label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Mesleği</label>
                <input asp-for="Job" class="form-control" />
                <span asp-validation-for="Job" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Yorumu</label>
                <textarea asp-for="Description" class="form-control" rows="5" cols="60"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Ekle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Geri Dön</a>
</div>

